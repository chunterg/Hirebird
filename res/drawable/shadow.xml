<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->


    <item android:bottom="1sp" android:top="0sp" android:left="0sp" android:right="0sp">

        <shape android:shape="rectangle" >

            <solid android:color="#ddd" />

            <corners android:radius="2dp" />

        </shape>

    </item>

    <item android:bottom="2sp" android:top="0sp" android:left="0sp" android:right="0sp">

        <shape android:shape="rectangle" >

            <solid android:color="#ccc" />

            <corners android:radius="1dp" />

        </shape>

    </item>

    <item android:bottom="3sp" android:top="0sp" android:left="0sp" android:right="0sp">

        <shape android:shape="rectangle" >

            <solid android:color="#bbb" />

        </shape>

    </item>

    <!-- White Top color -->

    <item android:bottom="4sp" android:top="0sp" android:left="0sp" android:right="0sp">

        <shape android:shape="rectangle" >

            <solid android:color="#fff" />

        </shape>

    </item>

</layer-list>