<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recruit"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".app.ui.HireBirdApplication"
        android:label="@string/app_name"
        android:theme="@style/Recruit.Theme.AppCompat.Light">
        <activity
            android:name="com.recruit.app.ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.recruit.app.ui.me.MessageActivity"
            android:label="@string/message_act_label"
            android:exported="true"/>

        <activity
            android:name="com.recruit.app.ui.job.PostJobActivity"
            android:label="postJob"/>

    </application>

</manifest>
